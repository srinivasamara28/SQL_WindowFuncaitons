use window_functions;

select * from employee;

-- max salaray
select dept,max(salary) as max_sal from employee
group by dept
;

select e.*, max(salary)  over() as max_salary from employee e;

select e.*, max(salary) over(partition by dept) as max_salary from employee e;


-- ROW_NUMBER()

select e.*, row_number() over() as rn from employee e; -- over() dont have any thing means.. entire table will become as window and row_number() is applicable to all records in the table

select e.*, row_number() over(partition by dept) as rn from employee e;

-- Fetch the first 2 employees from each department joined the company 
select * from (
select e.*, row_number() over(partition by dept order by emp_id) as rn from employee e)t
where t.rn < 3;


-- RANK() & DENSE_RANK()
-- Fetch the top 3 employees in each department earning the max salary

select * from (
select e.*, 
row_number() over(partition by dept order by salary desc) as row_num,
rank() over(partition by dept order by salary desc) as rnk,
dense_rank() over(partition by dept order by salary desc) as drnk
 from employee e)t
where t.rnk < 4;
;


-- LEAD() & LAG()

-- fetch a query to disply if the salary of an employee is higher, lower or equal to the previous employee

select e.*,
lag(salary) over(partition by dept order by emp_id asc) as prev_emp_sal,
lag(salary, 2, 0) over(partition by dept order by emp_id asc) as prev_emp_sal_2, -- Shows salaray of 2 rows prior to the current row and defaults to 0 if the value is null.
lead(salary) over(partition by dept order by emp_id asc) as next_emp_sal
from employee e;


select e.*,
lag(salary) over(partition by dept order by emp_id asc) as prev_emp_sal,
case 
	when e.salary > lag(salary) over(partition by dept order by emp_id asc) then "HIGHER"
	when e.salary = lag(salary) over(partition by dept order by emp_id asc) then "EQUAL" 
    when e.salary < lag(salary) over(partition by dept order by emp_id asc) then "LOWER" 
    else "FIRST RECORD" end
from employee e;


