-- Window Functions covered:
-- ROW_NUMBER()
-- RANK()
-- DENSE_RANK()
-- LEAD()
-- LAG()


CREATE DATABASE window_functions;
use window_functions;
CREATE TABLE employee
( emp_id INT,
emp_name varchar(50),
dept VARCHAR(50),
salary INT);

